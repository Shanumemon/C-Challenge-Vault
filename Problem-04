//Write a C program to find the sum of diagonal elements of a matrix.
#include <stdio.h>

int main()
{
    int i, j, r, c, sum=0;
    printf("Enter number of rows and column of matrix:\n");
    scanf("%d %d",&r,&c);
    int m[r][c];
    printf("Enter elements of matrix\n");
    for(i=0; i<r; i++)
    {
        for(j=0; j<c; j++)
        {
            scanf("%d",&m[i][j]); 
        }
    }
    if(r != c)
    {
        printf("Invalid input\n");
        return 0;
    }
    for(i=0; i<r; i++)
    {
        sum = sum + m[i][i];
    }
    printf("Sum of diagonal elements of given matrix is %d\n",sum);
    return 0;
}
