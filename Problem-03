//Delete Element From Array At Desired Or Specific Position
#include <stdio.h>
int main()
{
    int i, j, pos, n;
    printf("Enter size of array:\n");
    scanf("%d",&n);
    int arr[n];
    printf("Enter elements of array:\n");
    for(i=0; i<n; i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("Enter position of element to remove from array:\n");
    scanf("%d",&pos);
    pos--;
    if(pos<0 || pos>=n)
    {
        printf("Invalid input");
        return 0;
    }
    for(i=pos; i<n-1; i++)
    {
        arr[i] = arr[i+1];
    }
    n--;
    printf("Array after removing element at position %d\n",++pos);
    for(i=0; i<n; i++)
    {
        printf("%d ",arr[i]);
    }
    return 0;
}
