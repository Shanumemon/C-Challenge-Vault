/*Check whether a given string is a palindrome (case-insensitive).*/
#include <stdio.h>
#include <string.h>
#include <ctype.h>
int main()
{
    int i,len;
    char s[50];
    printf("Enter a string:\n");
    fgets(s, sizeof(s), stdin);
    len = strlen(s);
    if(s[len-1] == '\n')
    {
        s[len-1] = '\0';
        len--;
    }
    char rev[len+1];
    for(i=len-1; i>=0; i--)
    {
        rev[len-1-i] = s[i];
    }
    rev[len] = '\0';
    for(i=0; i<len; i++)
    {
        if(tolower(s[i]) != tolower(rev[i]))
        {
            printf("Given string is not palindrome\n");
            return 0;
        }
    }
    printf("Given string is palindrome\n");
    return 0;
}
