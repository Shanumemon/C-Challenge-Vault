/*Input a sentence and print the longest word. (If multiple, print the first.)*/
#include <stdio.h>
#include <string.h>
#include <ctype.h>
int main()
{
    int i=0, j=0, k=0, len, count=0, word_length[50]={0}, max;
    char s[100],word[50][50];
    printf("Enter string:\n");
    fgets(s, sizeof(s), stdin);
    len = strlen(s);
    if(s[len-1] == '\n')
    {
        s[len-1] = '\0';
        len--;
    }
    for(i=0; i<=len; i++)
    {
        if(isalpha(s[i]))
        {
            count++;
            word[j][k++] = s[i]; 
        }
        else
        {
            word[j][k] = '\0';
            word_length[j++] = count;
            count = 0;
            k=0;
        }
    }
    max = 0;
    for(i=0; i<j; i++)
    {
        if(word_length[i] > word_length[max])
        {
            max = i;
        }
    }
    i=0;
    while(word[max][i] != '\0')
    {
        printf("%c",word[max][i++]);
    }
    return 0;
}
