//Calculate factorial of a number without using '*' operator(Using functions)
#include <stdio.h>

int factorial(int num)
{
    int i, j, sum=0, fact=1;
    for(i=2; i<=num; i++)
    {
        for(j=1; j<=i; j++)
        {
            sum = sum + fact;
        }
        fact = sum;
        sum = 0;
    }
    return fact;
}
int main()
{
    int num, fact;
    printf("Enter number:\n");
    scanf("%d",&num);
    if(num<0)
    {
        printf("Invalid input\n");
        return 0;
    }
    fact = factorial(num);
    printf("%d! is %d",num, fact);
    return 0;
}
