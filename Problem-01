//Insert An Element Desired or Specific Position In An Array
#include <stdio.h>

int main() {
    int n, i, pos, insert;
    printf("Enter size of array:\n");
    scanf("%d", &n);

    int arr[n+1];

    printf("Enter elements of array:\n");
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter element to insert and its position:\n");
    scanf("%d %d", &insert, &pos);

    pos--;  // converting to 0-based index

    if(pos < 0 || pos > n) {
        printf("Invalid input\n");
        return 0;
    }

    for(i = n; i > pos; i--) {
        arr[i] = arr[i-1];
    }

    arr[pos] = insert;

    printf("Array after insertion:\n");
    for(i = 0; i < n+1; i++) {
        printf("%d ", arr[i]);  // added space
    }

    return 0;
}
