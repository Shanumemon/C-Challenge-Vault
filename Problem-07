/*Write a function int isEven(int n) that returns 1 if even, otherwise 0.*/
#include <stdio.h>

int iseven(int n)
{
    if(n%2 == 0)
        return 1;
    else
        return 0;
}

int main()
{
    int n;
    printf("Enter a positive integer\n");
    scanf("%d",&n);
    if(n < 0)
        printf("Invalid input\n");
    else if(iseven(n))
        printf("%d is even number\n",n);
    else
    {
        printf("%d is odd number");
    }
    return 0;
}
