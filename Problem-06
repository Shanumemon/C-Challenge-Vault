/*Largest of two numbers using functions*/
#include <stdio.h>

int max(int a, int b)
{
    if(a>b)
    {
        return 0;
    }
    else if(b>a)
    {
        return 1;
    }
    else
    {
        return 2;
    }
}

int main() {
	int a,b;
	printf("Enter two numbers:\n");
	scanf("%d %d",&a,&b);
	if(max(a, b) == 0)
	{
	    printf("%d is largest\n",a);
	}
    else if(max(a, b) == 1)
    {
        printf("%d is largest\n",b);
    }
    else
    {
        printf("Both numbersare equal\n");
    }
    return 0;
}

