/*Input a string and print its reverse without using the strrev()
function.*/
#include <stdio.h>
#include <string.h>
int main()
{
    int i,len;
    char s[50];
    printf("Enter string:\n");
    fgets(s, sizeof(s), stdin);
    len = strlen(s);
    if(s[len-1] == '\n')
    {
        s[len-1] = '\0';
        len--;
    }
    for(i=len-1; i>=0; i--)
    {
        printf("%c",s[i]);
    }
    return 0;
}
