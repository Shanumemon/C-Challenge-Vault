//Sort A Float Array In Ascending And Descending Order Using Bubble sort
#include <stdio.h>

int main() {
    int n, i, j;
    printf("Enter size of array\n");
    scanf("%d",&n);
    float arr[n], copy[n], temp;
    printf("Enter elements of array:\n");
    for(i=0; i<n; i++)
    {
        scanf("%f",&arr[i]);
        copy[i] = arr[i];
    }
    for(i=0; i<n-1; i++)
    {
        for(j=0; j<n-i-1; j++)
        {
            if(arr[j+1]<arr[j])
            {
                temp = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = temp;
            }
        }
    }
    for(i=0; i<n-1; i++)
    {
        for(j=0; j<n-i-1; j++)
        {
            if(copy[j+1]>copy[j])
            {
                temp = copy[j];
                copy[j] = copy[j+1];
                copy[j+1] = temp;
            }
        }
    }
    printf("Array sorted in Ascending order:\n");
    for(i=0; i<n; i++)
    {
        printf("%.2f ",arr[i]);
    }
    printf("\nArray sorted in Descending order:\n");
    for(i=0; i<n; i++)
    {
        printf("%.2f ",copy[i]);
    }
    return 0;
}
